#!/bin/bash

# Ensure git\VBoxManage  is installed
# Get latest vmdebootstrap code
# Get latest python-cliapp code
# Run vmdebootstrap script to create image
# Convert image to vdi hard drive

basedir=`pwd`
IMAGE=$1
vendor_dir="${basedir}/vendor"
vmdebootstrap_dir="${vendor_dir}/vmdebootstrap"

# don't tolerate errors.
set -e

# Get latest vmdebootstrap code.
if [ ! -d $vmdebootstrap_dir ]
then
    mkdir -p $vendor_dir
    pushd $vendor_dir
    git clone git://gitorious.org/vmdebootstrap/vmdebootstrap.git
else
    pushd $vmdebootstrap_dir
    git pull origin master
fi
popd

# Run vmdebootstrap script to create image

sudo ./vendor/vmdebootstrap/vmdebootstrap \
    --log freedombox.log --log-level debug \
    --image $IMAGE.img --hostname freedombox --size 8G --verbose --enable-dhcp \
    --arch=i386 --distribution=wheezy --mirror http://ftp.uk.debian.org/debian/ \
	--customize="$basedir/bin/virtualbox-customize" --root-password=freedom \
    --package apache2 --package build-essential --package checkinstall \
    --package devio --package dialog --package dnsmasq --package dosfstools \
    --package git --package haveged --package jwchat --package liblua5.1-sec1 \
    --package libpython2.7 --package locales --package locales-all \
    --package mercurial --package monkeysphere --package pandoc \
    --package parted --package prosody --package psmisc \
    --package python-argparse --package python-augeas \
    --package python-beautifulsoup --package python-bjsonrpc \
    --package python-cheetah --package python-cherrypy3 --package python-lxml \
    --package python-simplejson --package resolvconf --package ssh \
    --package sudo --package wajig --package zile

# Convert image to vdi hard drive
VBoxManage convertdd $IMAGE.img $IMAGE.vdi

